<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <!-- Profile Picture and Email -->
    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_account"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Picture"/>

        <!-- com.example.expenses_and_budget_mobileassignment.User Email -->
        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx@gmail.com"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- My Account -->
    <LinearLayout
        android:id="@+id/layoutMyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/profile_layout"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_account" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My account"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Notification Settings -->
    <LinearLayout
        android:id="@+id/layoutNotificationSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutMyAccount"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_notifications" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Income -->
    <LinearLayout
        android:id="@+id/layoutIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutNotificationSettings"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_income" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Advices -->
    <LinearLayout
        android:id="@+id/layoutAdvices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutIncome"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_advices" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advices"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Sign Out -->
    <LinearLayout
        android:id="@+id/layoutSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutAdvices"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_sign_out" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Footer Section -->
    <LinearLayout
        android:id="@+id/footer_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/footer_logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/logo"
            android:contentDescription="Footer Logo"
            android:layout_marginBottom="12dp"/>

        <!-- Terms of Service and Privacy Policy -->
        <TextView
            android:id="@+id/tvTermsAndPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service | Privacy Policy"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"/>

        <!-- Version -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 5253810v"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
